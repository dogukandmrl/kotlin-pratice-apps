<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/scoreBoard"
        android:layout_width="101dp"
        android:layout_height="0dp"
        android:layout_marginBottom="112dp"
        android:gravity="center"
        android:text="Score= 0"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeScore" />

    <TextView
        android:id="@+id/timeScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:text="Time:15"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/scoreBoard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreBoard">


        <ImageView
            android:id="@+id/kenny1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            app:srcCompat="@drawable/kenny"
            android:onClick="increaseScore"
             />


        <ImageView
            android:id="@+id/kenny2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            app:srcCompat="@drawable/kenny"
            android:onClick="increaseScore"
            />

        <ImageView
            android:id="@+id/kenny3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            app:srcCompat="@drawable/kenny"
            android:onClick="increaseScore"
            />

        <ImageView
            android:id="@+id/kenny4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            app:srcCompat="@drawable/kenny"
            android:onClick="increaseScore"
            />

        <ImageView
            android:id="@+id/kenny5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            app:srcCompat="@drawable/kenny"
            android:onClick="increaseScore"
            />

        <ImageView
            android:id="@+id/kenny6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            app:srcCompat="@drawable/kenny"
            android:onClick="increaseScore"
            />

        <ImageView
            android:id="@+id/kenny7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            app:srcCompat="@drawable/kenny"
            android:onClick="increaseScore"
            />

        <ImageView
            android:id="@+id/kenny8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            app:srcCompat="@drawable/kenny"
            android:onClick="increaseScore"
            />

        <ImageView
            android:id="@+id/kenny9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            app:srcCompat="@drawable/kenny"
            android:onClick="increaseScore"
            />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>